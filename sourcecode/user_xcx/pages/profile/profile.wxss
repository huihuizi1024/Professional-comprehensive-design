.scrollarea {
  height: 100vh;
  background-color: var(--bg-color);
}

.container {
  padding: 24rpx;
}

.user-section {
  background: linear-gradient(135deg, var(--primary-color) 0%, #40a9ff 100%);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(24, 144, 255, 0.3);
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-icon {
  font-size: 50rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  color: #fff;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.user-phone {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}

.btn-logout {
  width: 140rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-size: 24rpx;
  border-radius: 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  padding: 0;
  line-height: 58rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-logout::after {
  border: none;
}

.auth-buttons {
  display: flex;
  gap: 20rpx;
}

.btn-login {
  width: 140rpx;
  height: 60rpx;
  background-color: #fff;
  color: var(--primary-color);
  font-size: 26rpx;
  font-weight: 500;
  border-radius: 30rpx;
  border: none;
  padding: 0;
  line-height: 60rpx;
}

.btn-login::after {
  border: none;
}

.btn-register {
  width: 140rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-size: 26rpx;
  border-radius: 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  padding: 0;
  line-height: 58rpx;
}

.btn-register::after {
  border: none;
}

.menu-section {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.menu-content {
  padding: 0;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx;
  border-bottom: 1rpx solid var(--border-color);
  transition: background-color 0.2s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f9f9f9;
}

.menu-item-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 24rpx;
  width: 40rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-text {
  font-size: 30rpx;
  color: var(--text-main);
}

.menu-arrow {
  font-size: 32rpx;
  color: var(--text-secondary);
  line-height: 1;
}
