<navigation-bar title="个人中心" back="{{false}}" color="black" background="#f7f7f7"></navigation-bar>
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <view class="user-section" wx:if="{{isLoggedIn && userInfo}}">
      <view class="user-avatar">
        <text class="avatar-icon">👤</text>
      </view>
      <view class="user-info">
        <view class="user-name">{{userInfo.username}}</view>
        <view class="user-phone">{{userInfo.phone}}</view>
      </view>
      <button class="btn-logout" bindtap="handleLogout">退出登录</button>
    </view>

    <view class="user-section" wx:if="{{!isLoggedIn}}">
      <view class="user-avatar">
        <text class="avatar-icon">👤</text>
      </view>
      <view class="user-info">
        <view class="user-name">未登录</view>
        <view class="user-phone">登录后享受更多服务</view>
      </view>
      <view class="auth-buttons">
        <button class="btn-login" bindtap="goToLogin">登录</button>
        <button class="btn-register" bindtap="goToRegister">注册</button>
      </view>
    </view>

    <view class="menu-section" wx:if="{{isLoggedIn}}">
      <view class="menu-content">
        <view class="menu-item" bindtap="goToSendExpress">
          <view class="menu-item-left">
            <text class="menu-icon">📤</text>
            <text class="menu-text">发快递</text>
          </view>
          <text class="menu-arrow">›</text>
        </view>

        <view class="menu-item" bindtap="goToEditProfile">
          <view class="menu-item-left">
            <text class="menu-icon">✏️</text>
            <text class="menu-text">修改信息</text>
          </view>
          <text class="menu-arrow">›</text>
        </view>
      </view>
    </view>

    <view class="menu-section">
      <view class="menu-content">
        <view class="menu-item" bindtap="handleAbout">
          <view class="menu-item-left">
            <text class="menu-icon">ℹ️</text>
            <text class="menu-text">关于我们</text>
          </view>
          <text class="menu-arrow">›</text>
        </view>

        <view class="menu-item" bindtap="handleContact">
          <view class="menu-item-left">
            <text class="menu-icon">📞</text>
            <text class="menu-text">联系客服</text>
          </view>
          <text class="menu-arrow">›</text>
        </view>
      </view>
    </view>
  </view>
</scroll-view>
