.scrollarea {
  height: 100vh;
  background-color: var(--bg-color);
}

.container {
  padding: 30rpx;
}

.header-tip {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 30rpx;
  padding-left: 10rpx;
}

.compartment-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.compartment-card {
  background-color: var(--card-bg);
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid transparent;
  transition: all 0.2s;
}

.compartment-card:active {
  background-color: var(--primary-light);
  border-color: var(--primary-color);
}

.card-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-bottom: 12rpx;
}

.card-tag {
  font-size: 22rpx;
  color: var(--primary-color);
  background-color: var(--primary-light);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
  color: var(--text-secondary);
  font-size: 28rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}
