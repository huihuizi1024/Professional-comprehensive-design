.scrollarea {
  height: 100vh;
  background-color: var(--bg-color);
}

.container {
  padding: 30rpx;
}

.info-card {
  background-color: var(--card-bg);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.info-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-bottom: 20rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid var(--primary-color);
  line-height: 1;
}

.info-grid {
  display: flex;
  background-color: var(--bg-color);
  border-radius: 12rpx;
  padding: 20rpx;
}

.info-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-item:first-child {
  border-right: 1rpx solid var(--border-color);
}

.info-item .label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.info-item .value {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-main);
}

.info-item .value.highlight {
  color: var(--primary-color);
}

.form-card {
  background-color: var(--card-bg);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item .label {
  display: block;
  font-size: 28rpx;
  color: var(--text-main);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 90rpx;
  background-color: var(--bg-color);
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  color: var(--text-main);
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  background: var(--primary-color);
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  margin-top: 60rpx;
  border: none;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(24, 144, 255, 0.3);
}

.submit-btn::after {
  border: none;
}
