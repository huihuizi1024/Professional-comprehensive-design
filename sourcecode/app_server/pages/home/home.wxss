page {
  background-color: var(--bg-color);
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow: hidden;
}

.page-container {
  padding-bottom: 40rpx;
}

.header-section {
  padding: 40rpx 30rpx;
  background-color: #fff;
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.welcome-box {
  display: flex;
  flex-direction: column;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-bottom: 12rpx;
}

.welcome-subtitle {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.main-content {
  padding: 0 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
  margin: 32rpx 0 24rpx;
  padding-left: 16rpx;
  position: relative;
  line-height: 1;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 28rpx;
  background-color: var(--primary-color);
  border-radius: 4rpx;
}

.card-grid {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.action-card {
  background-color: var(--card-bg);
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s;
}

.action-card:active {
  background-color: #f9f9f9;
  transform: scale(0.99);
}

.card-icon-box {
  width: 90rpx;
  height: 90rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, #40a9ff 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.2);
}

.card-icon-box.blue {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.icon {
  font-size: 44rpx;
  color: #fff;
}

.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.label {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 8rpx;
}

.desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.arrow {
  color: #ccc;
  font-size: 32rpx;
}

.logout-section {
  margin-top: 60rpx;
}

.btn-logout {
  background-color: #fff;
  color: var(--error-color);
  font-size: 30rpx;
  border-radius: 45rpx;
  padding: 24rpx 0;
  border: 1rpx solid #ffe5e5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-logout::after {
  border: none;
}
