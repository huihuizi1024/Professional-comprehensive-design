.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #888;
}

.grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 10rpx;
}

.box {
  width: 48%;
  height: 200rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
  background-color: #fff;
}

.box-id {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.box-status {
  font-size: 26rpx;
}

/* 状态样式 */
.box-available {
  background-color: #f6ffed;
  border: 1px solid #b7eb8f;
  color: #52c41a;
}

.box-occupied {
  background-color: #fff1f0;
  border: 1px solid #ffa39e;
  color: #f5222d;
}

.box-fault {
  background-color: #f5f5f5;
  border: 1px solid #d9d9d9;
  color: #999;
}

.empty {
  width: 100%;
  text-align: center;
  color: #999;
  margin-top: 100rpx;
}
