.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  padding: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #888;
}

.list {
  padding-bottom: 40rpx;
}

.item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.item-title {
  font-size: 34rpx;
  font-weight: bold;
}

.item-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.status-active {
  background-color: #e6f7ff;
  color: #1890ff;
}

.status-inactive {
  background-color: #fff1f0;
  color: #f5222d;
}

.item-location {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.item-info {
  font-size: 26rpx;
  color: #999;
}

.empty {
  text-align: center;
  padding-top: 100rpx;
  color: #999;
}
