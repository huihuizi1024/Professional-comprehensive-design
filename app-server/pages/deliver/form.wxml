<view class="container">
  <view class="info-card">
    <view class="info-item">
      <text class="label">快递柜：</text>
      <text class="value">{{cabinetCode}}</text>
    </view>
    <view class="info-item">
      <text class="label">仓门号：</text>
      <text class="value highlight">{{compartmentId}}号仓</text>
    </view>
  </view>

  <view class="form">
    <view class="form-item">
      <text class="form-label">快递单号</text>
      <input class="input" placeholder="请输入或扫描快递单号" value="{{orderNo}}" bindinput="onInputOrderNo" />
      <view class="scan-btn" bindtap="scanOrderNo">📷</view>
    </view>

    <view class="form-item">
      <text class="form-label">收件人手机</text>
      <input class="input" type="number" placeholder="请输入手机号" value="{{receiverPhone}}" bindinput="onInputPhone" maxlength="11" />
    </view>

    <view class="form-item">
      <text class="form-label">收件人姓名</text>
      <input class="input" placeholder="请输入姓名（选填）" value="{{receiverName}}" bindinput="onInputName" />
    </view>

    <button class="btn-submit" type="primary" bindtap="submitOrder" loading="{{submitting}}">确认投递</button>
  </view>
</view>
