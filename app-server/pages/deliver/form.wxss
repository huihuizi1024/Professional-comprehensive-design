.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.info-card {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.info-item {
  display: flex;
  margin-bottom: 10rpx;
  font-size: 30rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  color: #666;
  width: 140rpx;
}

.value {
  color: #333;
  font-weight: bold;
}

.highlight {
  color: #1890ff;
  font-size: 34rpx;
}

.form {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.form-item {
  margin-bottom: 30rpx;
  position: relative;
}

.form-label {
  display: block;
  margin-bottom: 16rpx;
  font-size: 30rpx;
  color: #333;
}

.input {
  border: 1px solid #ddd;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
}

.scan-btn {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 40rpx;
  z-index: 10;
}

.btn-submit {
  margin-top: 50rpx;
  width: 100%;
}
