<view class="container">
  <block wx:if="{{orders.length > 0}}">
    <view class="order-item" wx:for="{{orders}}" wx:key="id">
      <view class="order-header">
        <text class="order-no">单号：{{item.orderNo}}</text>
        <text class="order-status status-{{item.status}}">
          {{item.status === 0 ? '待取件' : (item.status === 1 ? '已取件' : '已超时')}}
        </text>
      </view>
      
      <view class="order-body">
        <view class="info-row">
          <text class="label">收件人：</text>
          <text class="val">{{item.receiverName || '未填写'}} ({{item.receiverPhone}})</text>
        </view>
        <view class="info-row">
          <text class="label">取件码：</text>
          <text class="val highlight">{{item.pickCode}}</text>
        </view>
        <view class="info-row">
          <text class="label">投递时间：</text>
          <text class="val">{{item.createdAt || '未知'}}</text>
        </view>
      </view>
    </view>
  </block>
  
  <view wx:else class="empty">
    <text>暂无投递记录</text>
  </view>
</view>
