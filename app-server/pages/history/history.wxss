.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.order-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.order-no {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.order-status {
  font-size: 28rpx;
}

.status-0 { color: #1890ff; } /* 待取件 */
.status-1 { color: #52c41a; } /* 已取件 */
.status-2 { color: #f5222d; } /* 超时 */

.order-body {
  font-size: 28rpx;
  color: #666;
}

.info-row {
  margin-bottom: 10rpx;
  display: flex;
}

.label {
  width: 140rpx;
}

.val {
  flex: 1;
  color: #333;
}

.highlight {
  color: #fa8c16;
  font-weight: bold;
}

.empty {
  text-align: center;
  margin-top: 100rpx;
  color: #999;
}
