.scrollarea {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
}

/* 搜索框样式 */
.search-section {
  margin-bottom: 20rpx;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  height: 76rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
  border: none;
  outline: none;
}

.search-actions {
  display: flex;
  align-items: center;
}

.search-btn {
  font-size: 28rpx;
  color: #07c160;
  margin-left: 20rpx;
}

.clear-btn {
  font-size: 32rpx;
  color: #999;
  margin-left: 20rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #f5f5f5;
  border-radius: 50%;
}

/* 筛选样式 */
.filter-section {
  display: flex;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  overflow-x: auto;
  white-space: nowrap;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.filter-item {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 4rpx solid transparent;
  margin-right: 10rpx;
  display: inline-block;
}

.filter-item.active {
  color: #07c160;
  border-bottom-color: #07c160;
  font-weight: 500;
}

.order-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-item {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.order-company {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.order-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.order-status.status-0 {
  background-color: #fff3e0;
  color: #ff9800;
}

.order-status.status-1 {
  background-color: #e8f5e9;
  color: #4caf50;
}

.order-status.status-2 {
  background-color: #ffebee;
  color: #f44336;
}

.order-content {
  padding: 25rpx 30rpx;
}

.order-row {
  display: flex;
  margin-bottom: 15rpx;
  font-size: 26rpx;
}

.order-row:last-child {
  margin-bottom: 0;
}

.order-row .label {
  color: #999;
  min-width: 140rpx;
}

.order-row .value {
  color: #333;
  flex: 1;
}

.order-footer {
  padding: 20rpx 30rpx;
  background-color: #fafafa;
  border-top: 2rpx solid #f0f0f0;
}

.pick-code {
  display: flex;
  align-items: center;
  justify-content: center;
}

.pick-code-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 10rpx;
}

.pick-code-value {
  font-size: 32rpx;
  color: #667eea;
  font-weight: bold;
  letter-spacing: 5rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.btn-pickup {
  width: 300rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: none;
}

.btn-pickup::after {
  border: none;
}
