.scrollarea {
  height: 100vh;
  background-color: var(--bg-color);
}

.container {
  padding: 24rpx;
}

/* 搜索框样式 */
.search-section {
  margin-bottom: 24rpx;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 24rpx;
  height: 88rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: var(--text-main);
  border: none;
  outline: none;
}

.search-actions {
  display: flex;
  align-items: center;
}

.search-btn {
  font-size: 28rpx;
  color: var(--primary-color);
  margin-left: 20rpx;
  font-weight: 500;
}

.clear-btn {
  font-size: 32rpx;
  color: var(--text-secondary);
  margin-left: 20rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: var(--bg-color);
  border-radius: 50%;
}

/* 筛选样式 */
.filter-section {
  display: flex;
  margin-bottom: 24rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 10rpx;
  overflow-x: auto;
  white-space: nowrap;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.scope-filter {
  margin-top: 6rpx;
}

.filter-item {
  padding: 24rpx 30rpx;
  font-size: 28rpx;
  color: var(--text-regular);
  border-bottom: 4rpx solid transparent;
  margin-right: 10rpx;
  display: inline-block;
  transition: all 0.3s;
}

.filter-item.active {
  color: var(--primary-color);
  border-bottom-color: var(--primary-color);
  font-weight: 600;
}

.order-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.order-item {
  background-color: var(--card-bg);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.order-company {
  font-size: 30rpx;
  color: var(--text-main);
  font-weight: 600;
}

.order-status {
  padding: 6rpx 20rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.order-status.status-0 {
  background-color: #fffbe6;
  color: var(--warning-color);
  border: 1rpx solid #ffe58f;
}

.order-status.status-1 {
  background-color: #f6ffed;
  color: var(--success-color);
  border: 1rpx solid #b7eb8f;
}

.order-status.status-2 {
  background-color: #fff1f0;
  color: var(--error-color);
  border: 1rpx solid #ffa39e;
}

.order-content {
  padding: 24rpx 30rpx;
}

.order-row {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  line-height: 1.5;
}

.order-row:last-child {
  margin-bottom: 0;
}

.order-row .label {
  color: var(--text-secondary);
  min-width: 140rpx;
}

.order-row .value {
  color: var(--text-main);
  flex: 1;
}

.order-footer {
  padding: 20rpx 30rpx;
  background-color: #fafafa;
  border-top: 2rpx solid var(--border-color);
}

.pick-code {
  display: flex;
  align-items: center;
  justify-content: center;
}

.pick-code-label {
  font-size: 26rpx;
  color: var(--text-regular);
  margin-right: 12rpx;
}

.pick-code-value {
  font-size: 36rpx;
  color: var(--primary-color);
  font-weight: bold;
  letter-spacing: 4rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 40rpx;
}

.btn-pickup {
  width: 300rpx;
  height: 80rpx;
  background: var(--primary-color);
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
}

.btn-pickup::after {
  border: none;
}
