.scrollarea {
  height: 100vh;
  background-color: var(--bg-color);
}

.container {
  padding: 30rpx;
}

.form-section {
  background-color: var(--card-bg);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 36rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: var(--text-main);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.select-wrapper {
  width: 100%;
  height: 90rpx;
  background-color: var(--bg-color);
  border-radius: 12rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  border: 2rpx solid var(--border-color);
}

.select-text {
  font-size: 30rpx;
  color: var(--text-main);
}

.select-arrow {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.form-input {
  width: 100%;
  height: 90rpx;
  background-color: var(--bg-color);
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  color: var(--text-main);
  border: 2rpx solid var(--border-color);
}

.divider {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin: 40rpx 0 24rpx;
  position: relative;
  text-align: center;
}

.divider::before,
.divider::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 35%;
  height: 1rpx;
  background-color: var(--border-color);
}

.divider::before {
  left: 0;
}

.divider::after {
  right: 0;
}

.btn-submit {
  width: 100%;
  height: 90rpx;
  background: var(--primary-color);
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  border: none;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(24, 144, 255, 0.3);
}

.btn-submit::after {
  border: none;
}

.btn-submit[disabled] {
  background-color: #d9d9d9;
  box-shadow: none;
  color: #fff;
}

/* Modal Styles */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: flex-end;
  z-index: 1000;
}

.modal-content {
  width: 100%;
  background-color: #fff;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  padding: 30rpx;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-main);
}

.modal-close {
  font-size: 40rpx;
  color: var(--text-secondary);
  padding: 10rpx;
}

.modal-scroll {
  max-height: 50vh;
}

.modal-item {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid var(--border-color);
  display: flex;
  flex-direction: column;
}

.modal-item:last-child {
  border-bottom: none;
}

.modal-item:active {
  background-color: #f9f9f9;
}

.modal-item-name {
  font-size: 30rpx;
  color: var(--text-main);
  margin-bottom: 8rpx;
  font-weight: 500;
}

.modal-item-address {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.compartment-item {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.compartment-info {
  display: flex;
  justify-content: space-between;
  width: 100%;
  align-items: center;
}

.compartment-number {
  font-size: 30rpx;
  color: var(--text-main);
}

.compartment-status {
  font-size: 26rpx;
  color: var(--success-color);
  background-color: #f6ffed;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}
