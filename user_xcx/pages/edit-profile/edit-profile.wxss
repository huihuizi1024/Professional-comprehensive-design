.scrollarea {
  height: 100vh;
  background-color: var(--bg-color);
}

.container {
  padding: 30rpx;
}

.form-section {
  background-color: var(--card-bg);
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: var(--text-main);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 90rpx;
  background-color: var(--bg-color);
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  color: var(--text-main);
  border: 2rpx solid var(--border-color);
}

.btn-submit {
  width: 100%;
  height: 90rpx;
  background: var(--primary-color);
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  border: none;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(24, 144, 255, 0.3);
}

.btn-submit::after {
  border: none;
}

.btn-submit[disabled] {
  background-color: #d9d9d9;
  box-shadow: none;
  color: #fff;
}
