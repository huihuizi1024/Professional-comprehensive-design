.scrollarea {
  height: 100vh;
  background-color: var(--bg-color);
}

.container {
  padding: 24rpx;
}

.quick-actions {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  gap: 20rpx;
}

.action-item {
  flex: 1;
  background: linear-gradient(135deg, var(--primary-color) 0%, #40a9ff 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(24, 144, 255, 0.3);
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
}

.action-icon .icon {
  font-size: 40rpx;
  color: #fff;
}

.action-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}

.location-tip {
  background-color: var(--primary-light);
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  text-align: center;
}

.tip-text {
  color: var(--primary-color);
  font-size: 26rpx;
}

.location-button-container {
  margin-bottom: 30rpx;
}

.location-button {
  background: #fff;
  color: var(--text-main);
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  border-radius: 44rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid var(--border-color);
}

.location-icon {
  margin-right: 10rpx;
}

.section-title {
  font-size: 32rpx;
  color: var(--text-main);
  font-weight: 600;
  margin-bottom: 24rpx;
  padding-left: 10rpx;
  border-left: 8rpx solid var(--primary-color);
  line-height: 1;
}

.cabinet-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.cabinet-item {
  background-color: var(--card-bg);
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.1s;
}

.cabinet-item:active {
  transform: scale(0.99);
}

.cabinet-info {
  flex: 1;
}

.cabinet-name {
  font-size: 32rpx;
  color: var(--text-main);
  font-weight: 600;
  margin-bottom: 12rpx;
}

.cabinet-code {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
}

.cabinet-address {
  font-size: 26rpx;
  color: var(--text-regular);
  display: flex;
  align-items: center;
}

.address-icon {
  margin-right: 8rpx;
  font-size: 24rpx;
}

.cabinet-status {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 16rpx;
  min-width: 140rpx;
}

.status-badge {
  padding: 6rpx 20rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-1 {
  background-color: #f6ffed;
  color: var(--success-color);
  border: 1rpx solid #b7eb8f;
}

.status-0 {
  background-color: #fff1f0;
  color: var(--error-color);
  border: 1rpx solid #ffa39e;
}

.available-count {
  font-size: 24rpx;
  color: var(--primary-color);
  background: var(--primary-light);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.empty {
  text-align: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}
