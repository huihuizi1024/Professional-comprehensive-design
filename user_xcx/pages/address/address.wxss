.scrollarea {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 地址列表样式 */
.address-list {
  margin-bottom: 20rpx;
}

.address-item {
  background-color: #fff;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.address-info {
  margin-bottom: 15rpx;
}

.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.phone {
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
}

.default-tag {
  font-size: 20rpx;
  color: #fff;
  background-color: #667eea;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.address-detail {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.address-actions {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 15rpx;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 18rpx;
  cursor: pointer;
}

.action-btn.edit {
  color: #667eea;
  background-color: rgba(102, 126, 234, 0.1);
}

.action-btn.delete {
  color: #f44336;
  background-color: rgba(244, 67, 54, 0.1);
}

.action-btn.set-default {
  color: #4caf50;
  background-color: rgba(76, 175, 80, 0.1);
}

/* 空地址提示 */
.empty-address {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
}

/* 添加地址按钮 */
.add-address-btn {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  color: #667eea;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 40rpx;
  border: 2rpx dashed #667eea;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.add-address-btn::after {
  border: none;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background-color: #fff;
  border-radius: 20rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  cursor: pointer;
}

.modal-body {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 70rpx;
  background-color: #f8f9fa;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #667eea;
  background-color: #fff;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.form-textarea {
  width: 100%;
  background-color: #f8f9fa;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 26rpx;
  min-height: 150rpx;
  box-sizing: border-box;
}

.form-textarea:focus {
  border-color: #667eea;
  background-color: #fff;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.checkbox-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.checkbox-label {
  font-size: 24rpx;
  color: #666;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 0 30rpx 30rpx;
}

.modal-footer button {
  flex: 1;
  height: 70rpx;
  border-radius: 35rpx;
  font-size: 26rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-cancel {
  background-color: #f8f9fa;
  color: #666;
  border: 1rpx solid #eee;
}

.btn-save {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
}

.btn-save::after {
  border: none;
}