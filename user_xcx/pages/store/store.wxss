page {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.page-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow: hidden;
}

.scrollarea {
  flex: 1;
  overflow: hidden;
}

.container {
  padding: 30rpx;
  padding-bottom: 40rpx;
}

.form-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.03);
}

.form-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
  position: relative;
  display: inline-block;
  left: 50%;
  transform: translateX(-50%);
}

.form-title::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 20%;
  width: 60%;
  height: 6rpx;
  background-color: #667eea;
  border-radius: 3rpx;
  opacity: 0.3;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 88rpx;
  background-color: #f8f9fa;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  transition: all 0.2s;
}

.input:focus {
  border-color: #667eea;
  background-color: #fff;
}

.btn-submit {
  margin-top: 50rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  border: none;
  box-shadow: 0 10rpx 20rpx rgba(102, 126, 234, 0.3);
}

.btn-submit:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.tips-container {
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
  padding-bottom: env(safe-area-inset-bottom);
}

.tips {
  padding: 20rpx 0;
  border-top: 1rpx solid #e0e0e0;
}

.tips-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #666;
  margin-bottom: 12rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tips-item {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}
