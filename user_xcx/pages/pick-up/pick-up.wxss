.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  overflow: hidden;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
  width: 100%;
}

.container {
  padding: 20rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}

.pick-up-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.03);
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.card-header .icon {
  font-size: 44rpx;
  margin-right: 12rpx;
}

.card-header .title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.input-section {
  margin-bottom: 24rpx;
}

.input-section .label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  text-align: center;
}

.pick-code-input {
  width: 100%;
  height: 80rpx;
  background-color: #f8f9fa;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 36rpx;
  text-align: center;
  letter-spacing: 6rpx;
  box-sizing: border-box;
  font-weight: bold;
  color: #333;
  transition: all 0.2s;
}

.pick-code-input:focus {
  border-color: #667eea;
  background-color: #fff;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.button-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.secondary-btns {
  display: flex;
  gap: 16rpx;
}

.btn-pickup {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 40rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.3);
}

.btn-pickup:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-face {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  color: #667eea;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 40rpx;
  border: 2rpx solid #667eea;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-face:active {
  background-color: #f0f7ff;
  opacity: 0.9;
}

.btn-query {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  color: #667eea;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 40rpx;
  border: 2rpx solid #667eea;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.btn-query:active {
  background-color: #f0f7ff;
}

.btn-scan {
  width: 100%;
  height: 80rpx;
  background-color: #f8f9fa;
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 40rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.btn-scan:active {
  background-color: #e9ecef;
}

button::after {
  border: none;
}

.tips {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.03);
}

.tips-title {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 12rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #667eea;
  line-height: 1;
}

.tips-item {
  font-size: 22rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 6rpx;
}

.footer-section {
  flex-shrink: 0;
  padding: 0 20rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background-color: #f5f5f5;
}

.help-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.03);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.help-header {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.help-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.help-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.help-content {
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: flex-end;
}

.help-text {
  font-size: 24rpx;
  color: #666;
  margin-right: 16rpx;
}

.btn-call {
  margin: 0 !important;
  background-color: #f0f7ff;
  color: #667eea;
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-weight: 500;
  line-height: 1.5;
}

.btn-call:active {
  background-color: #e0f0ff;
}
