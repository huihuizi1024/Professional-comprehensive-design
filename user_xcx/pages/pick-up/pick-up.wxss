.scrollarea {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.container {
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  min-height: calc(100vh - 88rpx);
}

.pick-up-card {
  background-color: #fff;
  border-radius: 30rpx;
  padding: 50rpx 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.2);
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 50rpx;
}

.card-header .icon {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.card-header .title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.input-section {
  margin-bottom: 50rpx;
}

.input-section .label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  text-align: center;
}

.pick-code-input {
  width: 100%;
  height: 100rpx;
  background-color: #f5f5f5;
  border-radius: 15rpx;
  padding: 0 30rpx;
  font-size: 40rpx;
  text-align: center;
  letter-spacing: 10rpx;
  box-sizing: border-box;
  font-weight: bold;
  color: #333;
}

.button-group {
  display: flex;
  gap: 20rpx;
}

.btn-query {
  flex: 1;
  height: 90rpx;
  background-color: #f5f5f5;
  color: #667eea;
  font-size: 30rpx;
  border-radius: 45rpx;
  border: none;
}

.btn-query::after {
  border: none;
}

.btn-pickup {
  flex: 1;
  height: 90rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 30rpx;
  border-radius: 45rpx;
  border: none;
}

.btn-pickup::after {
  border: none;
}

.tips {
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.tips-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.tips-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 10rpx;
  padding-left: 20rpx;
}

.help-section {
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
}

.help-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.help-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.help-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.help-text {
  flex: 1;
}
