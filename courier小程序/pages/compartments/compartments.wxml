<view class="container">
  <view class="title">请选择可用仓门</view>

  <view wx:if="{{compartments.length === 0}}" class="empty">
    暂无可用仓门
  </view>

  <view class="grid">
    <view
      class="cell"
      wx:for="{{compartments}}"
      wx:key="id"
      data-id="{{item.id}}"
      bindtap="selectCompartment"
    >
      <view class="cell-title">仓门 {{item.compartmentNo || item.id}}</view>
      <view class="cell-size">
        {{item.size || '标准'}}
      </view>
    </view>
  </view>
</view>
