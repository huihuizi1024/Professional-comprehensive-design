<view class="container">
  <view class="title">选择快递柜</view>

  <!-- 扫码区域 -->
  <view class="block">
    <button class="scan-btn" bindtap="scanCabinet">
      📷 扫描快递柜二维码
    </button>
  </view>

  <!-- 分割线 -->
  <view class="divider">或</view>

  <!-- 手动输入区域 -->
  <view class="block">
    <input
      class="input"
      placeholder="请输入快递柜编号（如 CAB001）"
      bindinput="onInputCode"
    />
    <button class="confirm-btn" bindtap="confirmInput">
      确认
    </button>
  </view>
</view>
