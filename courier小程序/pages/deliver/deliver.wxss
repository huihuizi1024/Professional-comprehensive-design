.container {
  padding: 40rpx;
}

.title {
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.info {
  background: #f7f8fa;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  font-size: 26rpx;
  color: #555;
}

.form-item {
  margin-bottom: 26rpx;
}

.label {
  display: block;
  margin-bottom: 8rpx;
  font-size: 26rpx;
  color: #333;
}

input {
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 18rpx;
  font-size: 28rpx;
}

.submit-btn {
  margin-top: 40rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  padding: 22rpx;
  border-radius: 12rpx;
}
