<view class="container">
  <view class="title">快递投递</view>

  <!-- 基本信息 -->
  <view class="info">
    <view>柜体编号：{{cabinetId}}</view>
    <view>仓门编号：{{compartmentId}}</view>
  </view>

  <!-- 表单 -->
  <view class="form">
    <view class="form-item">
      <text class="label">快递单号</text>
      <input
        placeholder="请输入快递单号"
        bindinput="onOrderNo"
      />
    </view>

    <view class="form-item">
      <text class="label">收件人姓名</text>
      <input
        placeholder="请输入收件人姓名"
        value="{{receiverName}}"
        bindinput="onName"
      />
    </view>

    <view class="form-item">
      <text class="label">收件人手机号</text>
      <input
        placeholder="请输入手机号"
        type="number"
        value="{{receiverPhone}}"
        bindinput="onPhone"
      />
    </view>

    <button class="submit-btn" bindtap="deliver">
      确认投递
    </button>
  </view>
</view>
