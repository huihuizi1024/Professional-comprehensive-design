.container {
  padding: 40rpx;
}

.order {
  background-color: #ffffff;
  border-radius: 14rpx;
  padding: 26rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.order view {
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.order button {
  margin-top: 16rpx;
  background-color: #1989fa;
  color: #fff;
  font-size: 26rpx;
  padding: 16rpx;
  border-radius: 8rpx;
}
