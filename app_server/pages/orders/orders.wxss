.scrollarea {
  height: 100vh;
  background-color: var(--bg-color);
}

.container {
  padding: 20rpx 30rpx;
}

.order-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.order-card {
  background-color: var(--card-bg);
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.cabinet-name {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-main);
}

.compartment-tag {
  font-size: 24rpx;
  color: var(--primary-color);
  background-color: var(--primary-light);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.order-content {
  margin-bottom: 30rpx;
}

.info-row {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 28rpx;
}

.info-row .label {
  color: var(--text-secondary);
  width: 140rpx;
}

.info-row .value {
  color: var(--text-main);
  flex: 1;
}

.order-footer {
  display: flex;
  justify-content: flex-end;
}

.btn-pickup {
  background: var(--primary-color);
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 40rpx;
  border-radius: 30rpx;
  margin: 0;
  line-height: 2;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
}

.btn-pickup::after {
  border: none;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: var(--text-secondary);
  font-size: 28rpx;
}
