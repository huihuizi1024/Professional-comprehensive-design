page {
  background-color: #f7f7f7;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow: hidden;
}

.page-container {
  padding-bottom: 40rpx;
}

.header-section {
  padding: 40rpx 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.welcome-box {
  display: flex;
  flex-direction: column;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.welcome-subtitle {
  font-size: 26rpx;
  color: #999;
}

.main-content {
  padding: 0 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin: 30rpx 0 20rpx;
  padding-left: 16rpx;
  position: relative;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 24rpx;
  background-color: #667eea;
  border-radius: 3rpx;
}

.card-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.action-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.02);
  transition: all 0.2s;
}

.action-card:active {
  background-color: #fafafa;
}

.card-icon-box {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.card-icon-box.blue {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.icon {
  font-size: 40rpx;
  color: #fff;
}

.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.desc {
  font-size: 24rpx;
  color: #999;
}

.arrow {
  color: #ccc;
  font-size: 32rpx;
}

.logout-section {
  margin-top: 60rpx;
}

.btn-logout {
  background-color: #fff;
  color: #ff4d4f;
  font-size: 30rpx;
  border-radius: 45rpx;
  padding: 20rpx 0;
  border: 1rpx solid #ffe5e5;
}

.btn-logout::after {
  border: none;
}
