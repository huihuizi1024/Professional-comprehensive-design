.scrollarea {
  height: 100vh;
  background-color: var(--bg-color);
}

.container {
  padding: 40rpx 30rpx;
}

.header-box {
  margin-bottom: 60rpx;
  text-align: center;
}

.header-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-bottom: 16rpx;
}

.header-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.scan-section {
  margin-bottom: 60rpx;
}

.scan-card {
  background-color: var(--card-bg);
  border-radius: 20rpx;
  padding: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s;
}

.scan-card:active {
  background-color: #f9f9f9;
  transform: scale(0.98);
}

.scan-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  color: var(--primary-color);
}

.scan-text {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-main);
}

.divider {
  display: flex;
  align-items: center;
  margin-bottom: 60rpx;
  color: var(--text-secondary);
  font-size: 24rpx;
}

.divider .line {
  flex: 1;
  height: 1rpx;
  background-color: var(--border-color);
}

.divider text {
  margin: 0 20rpx;
}

.input-section {
  background-color: var(--card-bg);
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.input-box {
  margin-bottom: 40rpx;
}

.input {
  width: 100%;
  height: 90rpx;
  background-color: var(--bg-color);
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  text-align: center;
  color: var(--text-main);
}

.confirm-btn {
  width: 100%;
  height: 90rpx;
  background: var(--primary-color);
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  border: none;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(24, 144, 255, 0.3);
}

.confirm-btn::after {
  border: none;
}
