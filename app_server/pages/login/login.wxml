<navigation-bar title="快递员登录" back="{{false}}" color="black" background="#f7f7f7"></navigation-bar>
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <view class="login-header">
      <text class="title">快递员端</text>
      <text class="subtitle">欢迎使用快递员专属服务</text>
    </view>

    <view class="login-form">
      <view class="form-item">
        <text class="label">工号/用户名</text>
        <input 
          class="input" 
          placeholder="请输入工号或用户名" 
          value="{{username}}"
          bindinput="onUsernameInput"
        />
      </view>

      <view class="form-item">
        <text class="label">密码</text>
        <input 
          class="input" 
          password 
          placeholder="请输入密码" 
          value="{{password}}"
          bindinput="onPasswordInput"
        />
      </view>

      <button class="btn-login" bindtap="handleLogin">登录</button>
    </view>
  </view>
</scroll-view>
