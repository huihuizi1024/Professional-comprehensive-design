.scrollarea {
  height: 100vh;
  background: linear-gradient(135deg, var(--primary-color) 0%, #40a9ff 100%);
}

.container {
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-height: calc(100vh - 88rpx);
}

.login-header {
  text-align: center;
  margin-bottom: 60rpx;
  margin-top: 60rpx;
}

.title {
  display: block;
  font-size: 56rpx;
  color: #fff;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.login-form {
  background-color: var(--card-bg);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: var(--text-main);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 90rpx;
  background-color: var(--bg-color);
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  color: var(--text-main);
}

.btn-login {
  width: 100%;
  height: 90rpx;
  background: var(--primary-color);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 45rpx;
  margin-top: 60rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(24, 144, 255, 0.3);
}

.btn-login::after {
  border: none;
}
